<%- include('header'); %>
<%- include('sidebar'); %>

        <div id="content-wrapper">

            <div class="container-fluid">

                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i> Detail de la commande</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="order-info" class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <thead>
                                        <tr>
                                            <th>Date Commande</th>
                                            <th>Total</th>
                                            <th>Frais de port</th>
                                            <th>Payée</th>
                                            <th>Date Paiement</th>
                                            <th>Expédiée</th>
                                            <th>Date Exp</th>
                                            <th>Adresse</th>
                                            <th>Ville</th>
                                            <th>Code postal</th>

                                        </tr>
                                    </thead>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td>
                                            <%= dateForm(orders.date_insert) %>
                                        </td>
                                        <td>
                                            <%= orders.total %>€
                                        </td>
                                        <td>
                                            <%= orders.shipping_cost %>€
                                        </td>

                                        <!--status-->
                                        <td class=
                                        <%switch(orders.status_payment) {
                                        case 'waiting':%> <%='status-pending'%><% break;
                                        case 'refused':%> <%= 'status-danger'%><% break;
                                        case 'validated':%> <%= 'status-success'%><% break;
                                        default:%> <%= 'status-secondary'%> <%}%>><i class="fas fa-circle"></i>
                                        </td>
                                        <!--status-->
                                        
                                        <td>
                                            <%switch(orders.date_payment) {
                                            case null:%> <%= '-' %><% break;
                                            default:%> <%= dateForm(orders.date_payment) %> <%}%>
                                        </td>

                                        <!--status shipment-->
                                        <td class=
                                        <%switch(orders.status_shipment) {
                                        case true:%> <%= 'status-success'%><% break;
                                        default:%> <%= 'status-secondary'%> <%}%>><i class="fas fa-circle"></i>
                                        </td>
                                        <!--status shipment-->

                                        <td>
                                            <%switch(orders.date_shipment) {
                                            case null:%> <%= '-' %><% break;
                                            default:%> <%= dateForm(orders.date_shipment) %> <%}%>
                                        </td>

                                        <td>
                                            <%= orders.delivery_address %>
                                        </td>
                                        <td>
                                            <%= orders.delivery_city %>
                                        </td>
                                        <td>
                                            <%= orders.delivery_zipcode %>
                                        </td>
                                    </tr>
                                    </tr>
                                </tbody>
                            </table>



                            <table id="product-list" class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Libelle</th>
                                        <th>Description</th>
                                        <th>Poids</th>
                                        <th>Prix</th>
                                        <th>Image</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Libelle</th>
                                        <th>Description</th>
                                        <th>Poids</th>
                                        <th>Prix</th>
                                        <th>Image</th>
                                    </tr>
                                </tfoot>
                                <tbody>

                                    <% for(var i=0;i<orderProducts.length;i++) {%>
                                        <tr>
                                            <td>
                                                <%= orderProducts[i].title %>
                                            </td>
                                            <td>
                                                <%= orderProducts[i].description %>
                                            </td>
                                            <td>
                                                <%= orderProducts[i].weight %>kg
                                            </td>
                                            <td>
                                                <%= orderProducts[i].price %>€
                                            </td>
                                            <td><img src="/images/<%= orderProducts[i].img %>"></td>
                                        </tr>
                                        <%}%>

                                </tbody>
                            </table>


                        </div>
                    </div>
                </div>


            </div>
            <!-- /.container-fluid -->

            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Blackboard</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <%- include('footer'); %>